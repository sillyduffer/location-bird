<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LocationBird" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_d</item>
        <item name="colorPrimaryVariant">@color/brown_p</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_d</item>
        <item name="colorSecondaryVariant">@color/blue_s</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- General. -->
        <item name="android:background">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Views rendered on map color. -->
        <item name="colorOnSurface">@color/map_background_dark</item>
        <!-- Action bar theme. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>